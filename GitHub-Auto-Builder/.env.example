# قاعدة البيانات
DATABASE_URL=postgresql://builder:builder_password_2025@localhost:5432/github_builder

# Redis
REDIS_URL=redis://:redis_password_2025@localhost:6379/0

# أمان
SECRET_KEY=your-super-secret-key-change-in-production
GITHUB_WEBHOOK_SECRET=github-webhook-secret-key

# GitHub Integration
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=/app/keys/private-key.pem
GITHUB_CLIENT_SECRET=your_github_client_secret

# OpenAI (للتحليل الذكي)
OPENAI_API_KEY=your-openai-api-key

# إعدادات التطوير
ENV=development
DEBUG=true

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# CI Platform Tokens
CODEMAGIC_API_TOKEN=your-codemagic-token
CIRCLECI_TOKEN=your-circleci-token
BITRISE_TOKEN=your-bitrise-token

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=100
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Auto-Fix Settings
AUTO_FIX_MAX_ATTEMPTS=3
AUTO_FIX_SAFE_TYPES=requirements.txt,package.json,pipfile,composer.json
AUTO_FIX_PRIMARY_BRANCH=main

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
