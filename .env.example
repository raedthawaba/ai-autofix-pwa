# ==============================================================================
# AI-GITHUB-AUTO-FIX ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aiautofix
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# SECURITY KEYS (Generate strong random strings)
# ==============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
GITHUB_WEBHOOK_SECRET=your-webhook-secret-change-this-in-production

# ==============================================================================
# GITHUB INTEGRATION
# ==============================================================================
# Personal Access Token with repo, admin:repo_hook, and workflow scopes
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_API_URL=https://api.github.com

# ==============================================================================
# OPENAI API (for advanced error analysis - optional)
# ==============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================================================
# CI/CD PLATFORM TOKENS
# ==============================================================================
CODEMAGIC_API_TOKEN=your_codemagic_token_here
CIRCLECI_API_TOKEN=your_circleci_token_here

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME=AI GitHub Auto-Fix
APP_VERSION=1.0.0
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# API RATE LIMITING
# ==============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# EMAIL CONFIGURATION (optional)
# ==============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ==============================================================================
# MOBILE/PWA SETTINGS
# ==============================================================================
PWA_ENABLED=true
PWA_NAME=AI Auto-Fix
PWA_SHORT_NAME=AutoFix
PWA_DESCRIPTION=AI-powered GitHub integration and CI/CD automation
PWA_THEME_COLOR=#1f2937
PWA_BACKGROUND_COLOR=#ffffff
PWA_DISPLAY=standalone
PWA_ORIENTATION=portrait